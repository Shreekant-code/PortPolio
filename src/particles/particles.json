{
  "fullScreen": { "enable": true },
  "background": { "color": { "value": "#000000" } },
  "fpsLimit": 60,
  "particles": {
    "number": { "value": 120, "density": { "enable": true, "area": 800 } },
    "color": { "value": ["#ffffff", "#ffcc00", "#ff66cc", "#00ccff"] },
    "shape": { "type": "circle" },
    "opacity": {
      "value": 1,
      "random": true,
      "animation": { "enable": true, "speed": 0.5, "minimumValue": 0.3, "sync": false }
    },
    "size": {
      "value": { "min": 1, "max": 3 },
      "animation": { "enable": true, "speed": 3, "minimumValue": 0.3, "sync": false }
    },
    "move": {
      "enable": true,
      "speed": 0.6,
      "direction": "none",
      "outModes": { "default": "out" }
    },
    "twinkle": {
      "particles": {
        "enable": true,
        "frequency": 0.05,
        "opacity": 1
      }
    }
  },
  "interactivity": {
    "events": {
      "onHover": { "enable": true, "mode": "repulse" },
      "onClick": { "enable": true, "mode": "push" },
      "resize": true
    },
    "modes": {
      "repulse": { "distance": 100 },
      "push": { "quantity": 4 }
    }
  },
  "detectRetina": true
}
